<%- include('partials/head') %>

<%- include('partials/navbar') %>	

	<div class="container mt-2 py-2">
		<h2 class="mb-3 text-center">Create New Book</h2>

		<form method="post" action="/books/insert">
			<div class="mb-3">
				<label for="exampleFormControlInput1" 
               class="form-label">Title</label>
				<input type="text" name="title" class="form-control" id="exampleFormControlInput1" placeholder="title">
			</div>
			<div class="mb-3">
				<label for="exampleFormControlInput2" class="form-label">Author</label>
				<input type="number" name="author" class="form-control" id="exampleFormControlInput2" placeholder="author">
			</div>
			<div class="mb-3">
				<label for="exampleFormControlInput3" class="form-label">Publisher</label>
				<input type="number" name="publisher" class="form-control" id="exampleFormControlInput3" placeholder="publisher">
			</div>
			<div class="mb-3">
				<label for="exampleFormControlInput4" class="form-label">Edition</label>
				<input type="number" name="edition" class="form-control" id="exampleFormControlInput4" placeholder="edition">
			</div>
			<div class="mb-3">
				<label for="exampleFormControlInput5" class="form-label">Year</label>
				<input type="number" name="year" class="form-control" id="exampleFormControlInput5" placeholder="year">
			</div>
			<div class="mb-3">
				<label for="exampleFormControlInput6" class="form-label">Category</label>
				<input type="number" name="category" class="form-control" id="exampleFormControlInput6" placeholder="category">
			</div>
			<div class="mb-3">
				<label for="exampleFormControlInput7" class="form-label">ISBN</label>
				<input type="text" name="isbn" class="form-control" id="exampleFormControlInput7" placeholder="isbn">
			</div>
			<div class="mb-3">
				<label for="exampleFormControlInput8" class="form-label">Rating</label>
				<input type="number" name="rating" class="form-control" id="exampleFormControlInput8" placeholder="rating">
			</div>
			<div class="mb3">
				<input type="submit" value="submit" class="btn btn-primary">
			</div>
		</form>
	</div>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>